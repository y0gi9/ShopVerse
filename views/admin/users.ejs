<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Users Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>Admin Users Management</h2>
                <p class="text-muted">Logged in as: <%= username %></p>
            </div>
            <div>
                <a href="/admin/users/create" class="btn btn-primary me-2">Add New Admin</a>
                <a href="/admin" class="btn btn-secondary me-2">Back to Dashboard</a>
                <a href="/admin/logout" class="btn btn-danger">Logout</a>
            </div>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Role</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.username %></td>
                                    <td>
                                        <% if (user.is_super_admin) { %>
                                            <span class="badge bg-primary">Super Admin</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">Admin</span>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(user.created_at).toLocaleDateString() %></td>
                                    <td>
                                        <form action="/admin/users/delete/<%= user.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this admin user?');">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html> 