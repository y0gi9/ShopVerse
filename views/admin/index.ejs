<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>Admin Dashboard</h2>
                <p class="text-muted">Logged in as: <%= username %></p>
            </div>
            <div>
                <% if (isSuperAdmin) { %>
                    <a href="/admin/users" class="btn btn-info me-2">Manage Admin Users</a>
                <% } %>
                <a href="/admin/create" class="btn btn-primary me-2">Add New Product</a>
                <a href="/admin/logout" class="btn btn-danger">Logout</a>
            </div>
        </div>
        <% if (isSuperAdmin) { %>
        <form action="/admin/contact-phone" method="POST" class="mb-2 d-flex align-items-center">
            <label for="contactPhone" class="me-2">Contact Phone:</label>
            <input type="text" name="contactPhone" id="contactPhone" class="form-control w-auto me-2" value="<%= contactPhone %>" placeholder="+1234567890" required>
            <button type="submit" class="btn btn-secondary">Update</button>
        </form>
        <form action="/admin/contact-method" method="POST" class="mb-4 d-flex align-items-center">
            <label for="contactMethod" class="me-2">Contact Method:</label>
            <select name="contactMethod" id="contactMethod" class="form-select w-auto me-2">
                <option value="email" <%= contactMethod === 'email' ? 'selected' : '' %>>Email</option>
                <option value="sms" <%= contactMethod === 'sms' ? 'selected' : '' %>>SMS</option>
            </select>
            <button type="submit" class="btn btn-secondary">Update</button>
        </form>
        <% } %>

        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <% if (product.image) { %>
                            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                        <% } else { %>
                            <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                No Image
                            </div>
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text"><%= product.description %></p>
                            <p class="card-text"><small class="text-muted">Created: <%= new Date(product.created_at).toLocaleDateString() %></small></p>
                            <form action="/admin/delete/<%= product.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>