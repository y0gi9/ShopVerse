<!DOCTYPE html>
<html>
<head>
    <title>Product Showcase</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="container mx-auto py-10">
        <div class="flex justify-center mb-8">
            <img src="/uploads/logo.png" alt="Store Name" class="max-w-md">
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <% products.forEach(product => { %>
                <div class="shadow-lg hover:shadow-xl transition-shadow rounded-lg overflow-hidden">
                    <img src="<%= product.image || 'https://via.placeholder.com/300' %>" alt="<%= product.name %>" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="text-xl font-semibold"><%= product.name %></h3>
                        <p class="text-gray-600 mt-2"><%= product.description %></p>
                        <% if (contactMethod === 'sms') { %>
                            <a href="sms:<%= contactPhone %>?body=Inquiry%20about%20<%= encodeURIComponent(product.name) %>" class="inline-block mt-4 px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700">SMS Now</a>
                        <% } else { %>
                            <a href="mailto:<%= contactEmail %>?subject=Inquiry%20about%20<%= encodeURIComponent(product.name) %>" class="inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Inquire Now</a>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>